
@{
    var db = Database.Open("homework");
    var inserted = false;

    if (IsPost)
    {
        var name = Request.Form["Name"];
        var mobile = Request.Form["Mobile"];
        var address = Request.Form["Address"];

        var insertCommand = "INSERT INTO Person (Name, Mobile, Address) VALUES (@0, @1, @2)";
        db.Execute(insertCommand, name, mobile, address);
        inserted = true;
    }
}

<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <title>Insert Page</title>
</head>
<body>
    <h2>Insert Record</h2>

    @if (inserted)
    {
        <p>Record inserted successfully!</p>
    }

    <form method="post">
        <label>Name:</label>
        <input type="text" name="Name" required /><br />

        <label>Mobile:</label>
        <input type="text" name="Mobile" required /><br />

        <label>Address:</label>
        <input type="text" name="Address" required /><br />

        <input type="submit" value="Insert" />
    </form>
</body>
</html>

